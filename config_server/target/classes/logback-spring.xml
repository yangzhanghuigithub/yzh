<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 测试环境+开发环境. 多个使用逗号隔开. 仅输出到控制台 -->
    <springProfile name="dev">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
        <!--<appender name="console" class="ch.qos.logback.core.ConsoleAppender">-->
        <!--<encoder>-->
        <!--<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>-->
        <!--</encoder>-->
        <!--</appender>-->

        <!-- 项目日志 -->
        <logger name="com.ingcore" level="DEBUG" />
        <!-- 打印sql  -->
        <logger name="java.sql.PreparedStatement" level="DEBUG" />
        <logger name="java.sql.ResultSet" level="DEBUG" />
        <!-- 其他日志默认info级别 -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- 生产环境日志， 仅输出到日志文件 -->
    <springProfile name="local,test,testwo,spare,prod">
        <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <!-- 保存日志文件的路径 -->
            <file>/data/javadata/zuul/ingcore_zuul.log</file>
            <!-- 日志格式 -->
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
            </encoder>
            <!-- 追加 -->
            <append>true</append>
            <!-- 循环政策：基于时间创建日志文件 -->
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- 日志文件名格式 -->
                <fileNamePattern>/data/javadata/zuul/ingcore_zuul.%d{yyyy-MM-dd}.log</fileNamePattern>
                <!-- 最大保存时间：天-->
                <maxHistory>90</maxHistory>
            </rollingPolicy>
        </appender>
        <!-- 连接生产环境调试时，修改下面两个日志级别即可 -->
        <!-- 项目日志 -->
        <logger name="com.ingcore" level="INFO" />
        <!-- 其他日志默认error级别 -->
        <root level="ERROR">
            <appender-ref ref="logfile"/>
        </root>
    </springProfile>
</configuration>